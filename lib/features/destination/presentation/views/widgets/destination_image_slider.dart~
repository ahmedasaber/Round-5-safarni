import 'package:flutter/cupertino.dart';
import 'package:safarni/core/utils/app_assets.dart';

class DestinationImageSlider extends StatelessWidget {
  const DestinationImageSlider({super.key, required this.isNetwork = false, required this.sliderImages});

  final bool isNetwork;
  final List<String> sliderImages;

  @override
  Widget build(BuildContext context) {
    return Container(
      child: Stack(
        children: [
          // Image
          SizedBox(
            height: 400,
            child: Center(
              child: isNetwork
                  ? Image.network(sliderImages as String)
                  : Image.asset(sliderImages as String),
            ),
          ),
        ],
      ),
    );
  }
}
